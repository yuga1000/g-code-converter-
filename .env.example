# Ghostline Revenue System V4.0 - Environment Configuration
# Copy this file to .env and fill in your actual values

# System Configuration
NODE_ENV=development
LOG_LEVEL=info
LOG_TO_FILE=true

# Telegram Bot Configuration (REQUIRED)
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here
TELEGRAM_CHAT_ID=your_telegram_chat_id_here

# Task Platform API Keys (Optional - for production mode)
MICROWORKERS_API_KEY=your_microworkers_api_key
MICROWORKERS_SECRET=your_microworkers_secret
MICROWORKERS_USERNAME=your_microworkers_username

CLICKWORKER_API_KEY=your_clickworker_api_key

SPARE5_API_KEY=your_spare5_api_key

# Blockchain API Keys (Optional - for wallet analysis)
ETHERSCAN_API_KEY=your_etherscan_api_key
ALCHEMY_API_KEY=your_alchemy_api_key
ALCHEMY_API_URL=https://eth-mainnet.g.alchemy.com/v2

# Withdrawal Configuration
WITHDRAWAL_ADDRESS=your_ethereum_address_here
WITHDRAWAL_THRESHOLD=0.01

# Task Configuration
SCAN_INTERVAL=300000
MIN_TASK_REWARD=0.001
MAX_CONCURRENT_TASKS=3
API_TIMEOUT=15000
RATE_LIMIT_DELAY=2000

# Mnemonic Validator Configuration
MIN_BALANCE_THRESHOLD=0.001
VALIDATION_BATCH_SIZE=10

# Lost Wallet Analyzer Configuration
MIN_INACTIVITY_YEARS=3
MAX_RECENT_TX=0
MIN_CREATION_AGE=5
MIN_BALANCE=0.01
MAX_LAST_ACTIVITY=2021

# API Rate Limits
ETHERSCAN_RATE_LIMIT=200
ALCHEMY_RATE_LIMIT=100

# Security Settings
ENABLE_SECURITY_LOGGING=true
ENABLE_ENCRYPTION=true
AUTO_KEY_ROTATION=false
